* {
    font-family:Helvetica, arial
}
a {
    text-decoration:none;
    padding-right:8px;
    font-size: 16px;
    font-weight: bold;
    line-height: 20px;
    
    color: #00F;
    text-decoration: none;
    
}

th {
    text-align: left;
    padding-right: 50px;
}
td {
    padding-right: 20px;
}
#index_listings {
    top: 25px;
    transform: translate(-50%);
    border: 3px solid #e5e5e5
}


#infobox {
    height: 30px;
    border-bottom: 3px solid #e5e5e5
}

#loadicon_div {
    position: relative;
    width: 30px;
    height: 30px;
    overflow: hidden;
    // border: 1px red solid;
    position: absolute;
    left: 100%;
    top: 75px;
    transform: translate(-100%,-100%);
}
#loadicon_img {
    position: absolute;
    left: 50%;
    top: 50%;
    transform: translate(-50%, -50%);
    height: 200%;
    display: none;
}

#btn_clear {
    display: block;
    float: right;
}
#btn_random {
    display: block;
    float: right;
}

#floor {
    height: -moz-calc(100% - 50px); /* Firefox */
    height: -webkit-calc(100% - 50px); /* Chrome, Safari */
    height: calc(100% - 50px); /* IE9+ and future browsers */
    top:100%;
    transform: translate(-50%,-100%);
}

.field_with_errors {
    display: inline;
}

#noteditwarning {
    display: inline;
    padding-left: 50px;
    color: red;
    display: none;
}


.centered {
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);

}

.round {
    border-radius: 25px;
    padding: 10px;
    display: inline-block
}
.light {
    // background-image: url(<%= asset_path 'triangular.png' %>);
    background-color:#FFF;
}
.dark {
    background-color:#DADADA;
    // background-image: url(<%= asset_path 'congruent_outline.png' %>);
}