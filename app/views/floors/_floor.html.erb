<%= form_for @floor do |f| %>
 
  <% if @floor.errors.any? %>
    <div id="error_explanation">
      <h2>
        <%= pluralize(@floor.errors.count, "error") %> prohibited
        this floor from being saved:
      </h2>
      <ul>
        <% @floor.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  
  
  <div id="infobox" class="light">
    <%= link_to 'Back', floors_path, :class => "link" %>
    <%= link_to 'Edit', edit_floor_path(@floor), :class => "link" %>
    <p style="display:inline">
      <strong>Map Name:</strong>
      
      <%= @floor.name %>
      <strong style="padding-left:10px">Floor Number:</strong>
      <%= @floor.level %>
    </p>
    
    <p style="display:inline">
      <%= f.label :name %><br>
      <%= f.text_field :name %>
    </p>
    <p style="display:inline">
      <%= f.label :level %><br>
      <%= f.number_field :level %>
    </p>
    
    <p style="display:none">
      <%= f.label :json %><br>
      <%= f.text_area :json %>
    </p>
    
    <p>
      <%= f.submit %>
    </p>
    <button id="btn_clear">Clear Floor</button>
    <button id="btn_random">Randomize Floor</button>
  </div>
  
  
  <div id="loadicon_div">
    <%= image_tag "hex-loader", :id=>"loadicon_img" %>
  </div>
  
  
  <div id="floor_container">
    <object id="floor" 
      type="image/svg+xml" 
      class="centered floor<%= @floor.level %>"
      data="<%= asset_path('floor'+@floor.level.to_s+'.svg') %>" 
    ></object>
  </div>
  <%= javascript_include_tag "floor" %>
<% end %>