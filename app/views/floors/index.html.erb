<body id="page_index" class="dark">
    <div id="index_listings" class="centered round light">
        <h1>Floors Index</h1>
        <%= link_to 'Create New Floor', new_floor_path %>
        <table>
            <tr>
                <th>Map Name</th>
                <th>Floor Number</th>
                <th>Commands</th>
                <th colspan="3"></th>
            </tr>
            <% @floors.each do |floor| %>
                <tr>
                    <td style="white-space:nowrap"><%= floor.name %></td>
                    <td style="white-space:nowrap"><%= floor.level %></td>
                    <td style="white-space:nowrap"><%= link_to 'View', floor_path(floor) %>
                    <%= link_to 'Edit', edit_floor_path(floor) %>
                    <%= link_to 'Delete', floor_path(floor),
                          method: :delete,
                          data: { confirm: 'Are you sure?' } %></td>
                </tr>
            <% end %>
        </table>
        <p style="display:inline;position:relative;top:100px;font-size:12px">Copyright 2016 Dominic Phillips</p>
    </div>
</body>